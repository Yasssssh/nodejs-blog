<div class="author">
  <h1 class="author__heading">Short and Concise saves time</h1>
  <p class="author__body">Quick and plain news articles for you to Read.</p>
</div>

<img
  src="/img/hero-image.jpg"
  alt="person looking out of window"
  class="hero_image"
  width="850"
  height="528"
/>
<section class="articles">
  <h2 class="articles_heading">Latest Posts</h2>
  <ul class="article_ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
